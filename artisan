#!/bin/bash

# Laravel Artisan Command Wrapper for Docker
# Usage: ./artisan <command> [options]

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${BLUE}[ARTISAN]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Check if Docker is running
if ! docker compose ps | grep -q "chatbot_saas_app"; then
    print_error "Docker containers are not running. Please start them first with: docker compose up -d"
    exit 1
fi

# Check if app container is healthy
if ! docker compose ps | grep -q "healthy.*app"; then
    print_warning "App container is not healthy. Commands may fail."
fi

# Execute artisan command in container
print_status "Executing: php artisan $@"
docker compose exec -T app php artisan "$@"

# Check exit status
if [ $? -eq 0 ]; then
    print_success "Command completed successfully"
else
    print_error "Command failed"
    exit 1
fi
