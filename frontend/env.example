# API Configuration
VITE_API_BASE_URL=http://localhost:9000/api
VITE_API_TIMEOUT=10000

# Authentication
VITE_AUTH_TOKEN_KEY=chatbot_auth_token
VITE_USER_DATA_KEY=chatbot_user

# Application
VITE_APP_NAME=ChatBot Pro
VITE_APP_VERSION=1.0.0

# Environment
VITE_NODE_ENV=development

# External Services (if any)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true

# Auth Debug Panel
# Set to true to enable Auth Debug Panel in any environment
# Useful for debugging authentication issues in production
# Values: true, false, 1, 0, yes, no
VITE_ENABLE_AUTH_DEBUG_PANEL=false
